{{> header}}

<main class=container>
	<h1>Login</h1>

	<form class=form-group method=post>
		<input autofocus class="form-control form-group" name=login placeholder="Username or Email" required>
		<input class="form-control form-group" name=password placeholder=Password required type=password>
		<input class="btn btn-primary" type=submit value=Login>
	</form>

	<p>
		Forgot your password?
		<a href=/password-reset>Request a password reset.</a>
	</p>
</main>
